{
	"welcomeFile": "index.html",
	"authenticationMethod": "route",
	"routes": 
		[
			{
				"source": "(js\/)(.*)",
				"destination": "js_be", 
				"csrfProtection": false,
				"authenticationType": "xsuaa",
				"scope" : "$XSAPPNAME.view"
			},
			{
				"source": "(.*)(.xsjs)",
				"destination": "xsjs_be",
				"csrfProtection": false,
				"authenticationType": "xsuaa",
				"scope" : "$XSAPPNAME.view"
			},
			{
				"source": "(.*)(.xsodata)",
				"destination": "xsjs_be", 
				"csrfProtection": false,
				"authenticationType": "xsuaa",
				"scope" : "$XSAPPNAME.create"
			},
			{
				"localDir": "resources",
				"source": "^/(.*)", 
				"authenticationType": "xsuaa",
				"scope" : "$XSAPPNAME.view"
			}
		]
}