{

"xsappname": "mta_minreq",
"description": "This minimum requirements example app defines 2 scopes",

"scopes": 
	[ 
		{
			"name": "$XSAPPNAME.view", 
			"description": "View data"
		},
		{
			"name": "$XSAPPNAME.create",
			"description": "Create data"
		}
	],
	
"attributes": 
	[
		{
			"name": "manager",
			"description": "Employee's Manager Name",
			"valueType": "string"
		},
		{
			"name": "team",
			"description": "Employee's Team Name",
			"valueType": "string"
		},
		{
			"name": "age",
			"description": "Age in Years",
			"valueType": "int"
		},
		{
			"name": "start_date",
			"description": "Start Date",
			"valueType": "date"
		}	
	],

"role-templates": 
	[
		{
			"name": "MinReqManager", 
			"description": "Role for creating data",
			"scope-references": 
				[ 
					"$XSAPPNAME.create",
					"$XSAPPNAME.view" 
				], 
			"attribute-references": 
				[
				]
		},

		{
			"name": "MinReqUser",
			"description": "Role for viewing data",
			"scope-references": 
				[ 
					"$XSAPPNAME.view" 
				], 
			"attribute-references": 
				[
				]
		}
	]
}
